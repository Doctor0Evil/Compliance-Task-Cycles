PACKAGE GRIMOIRE

    GLOBAL LESSONS
    GLOBAL CURRENT_LESSON

    ACTION add_lesson
        INPUT lesson_id string, title string, content string, tasks list
        EXEC
            LESSONS[lesson_id] = {
                "title": title,
                "content": content,
                "tasks": tasks,
                "completed": FALSE
            }
            LOG üìö Lesson added: {title}

    ACTION start_lesson
        INPUT lesson_id string
        EXEC
            IF EXISTS LESSONS[lesson_id] THEN
                CURRENT_LESSON = LESSONS[lesson_id]
                LOG üè´ Starting lesson: {CURRENT_LESSON["title"]}
                LOG {CURRENT_LESSON["content"]}
            ELSE
                LOG ‚ùå Lesson {lesson_id} not found.
            ENDIF

    ACTION complete_task
        INPUT task_index int
        EXEC
            IF CURRENT_LESSON != NULL THEN
                CURRENT_LESSON["tasks"][task_index]["completed"] = TRUE
                LOG ‚úÖ Task {task_index + 1} completed!
                # Check if all tasks done
                IF ALL t["completed"] FOR t IN CURRENT_LESSON["tasks"] THEN
                    CURRENT_LESSON["completed"] = TRUE
                    LOG üéâ Lesson completed: {CURRENT_LESSON["title"]}
                ENDIF
            ELSE
                LOG ‚ùå No active lesson.
            ENDIF

    ACTION show_progress
        EXEC
            IF CURRENT_LESSON != NULL THEN
                LOG üìä Progress for {CURRENT_LESSON["title"]}:
                FOR i, task IN ENUMERATE CURRENT_LESSON["tasks"]
                    status = "‚úîÔ∏è" IF task["completed"] ELSE "‚ùå"
                    LOG  [{i+1}] {task["description"]} - {status}
                ENDFOR
            ELSE
                LOG ‚ÑπÔ∏è No active lesson.




















































































