# ───────────────────────────────────────────────
# ALN Source Files
# ───────────────────────────────────────────────
*.aln text eol=lf
*.aln linguist-language=ALN
*.aln linguist-detectable=true

# ───────────────────────────────────────────────
# ALN Scripts & Configs
# ───────────────────────────────────────────────
*.ps1 text eol=lf
*.psm1 text eol=lf
*.yaml text eol=lf
*.yml   text eol=lf

# ───────────────────────────────────────────────
# GitHub Actions Workflows
# ───────────────────────────────────────────────
.github/workflows/*.yml  linguist-language=YAML
.github/workflows/*.yaml linguist-language=YAML
.github/scripts/*.ps1    text eol=lf
.github/scripts/*        text eol=lf  # Allow executables

# ───────────────────────────────────────────────
# Kubernetes Manifests
# ───────────────────────────────────────────────
k8s-manifests/*.yaml linguist-language=YAML
k8s-manifests/*.yml  linguist-language=YAML

# ───────────────────────────────────────────────
# Shell Scripts
# ───────────────────────────────────────────────
*.sh text eol=lf

# ───────────────────────────────────────────────
# Documentation & Config Files
# ───────────────────────────────────────────────
*.md    text eol=lf
*.json  text eol=lf
*.toml  text eol=lf

# ───────────────────────────────────────────────
# Global Normalization
# ───────────────────────────────────────────────
* text=auto eol=lf
# Normalize text by default (consistent across OS)
* text=auto

# Enforce LF for source-like files
*.sh   text eol=lf
*.py   text eol=lf
*.aln  text eol=lf
*.lisp text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf
*.md   text eol=lf

# Enforce CRLF for Windows-only scripts
*.cmd  text eol=crlf
*.bat  text eol=crlf
*.ps1  text eol=crlf

# Mark binaries (no diff/merge)
*.png  binary
*.jpg  binary
*.jpeg binary
*.gif  binary
*.webp binary
*.svg  binary
*.ico  binary
*.mp4  binary
*.mov  binary
*.zip  binary
*.7z   binary
*.gz   binary

# Lock/merge strategy for deterministic files
package-lock.json merge=ours
yarn.lock         merge=ours
pnpm-lock.yaml    merge=ours
Pipfile.lock      merge=ours
poetry.lock       merge=ours

# Improve diffs for specific syntaxes (if needed)
*.aln  diff
*.lisp diff

# Exclude build/export-only assets from source archives
.bithub/backups/ export-ignore
bithub_datalake/ export-ignore
